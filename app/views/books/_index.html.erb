 <table class='table table-hover table-inverse'>
                <thead>
                    <tr>
                        <td></td>
                        <td>Title</td>
                        <td>Opinion</td>
                    </tr>
                </thead>
                <tbody>
                    <% books.each do |book| %>
                        <tr id="book_<%= book.id %>">
                            <td><%= link_to user_path(book.user.id) do %>
                            <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %>
                            <% end %>
                            </td>
                            <td><%= link_to book.title, book_path(book.id) %></td>
                            <td><%= book.body %></td>
                            <td class="favorite-btn"><%= render "favorites/favorite-btn", book: book %></td>
                            <td class="comments-count">コメント数: <%= book.book_comments.count %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
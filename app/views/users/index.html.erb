
<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
        <%= render 'users/user', user:@user %>
        <%= render 'books/newbook', book:@book %>
    </div>
    
   <div class='col-md-8 offset-md-1'>
      <h2>Users</h2>
      <table class='table'>
        <thead>
          <tr>
            <td>image</td>
            <td>name</td>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg' %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>  
      </table>
    </div>
  </div>
</div>


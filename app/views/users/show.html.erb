<%= notice %>
<div class='container px-5 px-sm-0'>
  <div class='row'>
  <%= render 'users/list', user:@user, book:@book %>
    <div class='col-md-8 offset-md-1'>
    <h2>Books</h2>

      <table class='table table-hover table-inverse'>
      <tbody>
      <thead>

      <tr>
       <td>Title</td>
       <td>Opinion</td>
      <th colspan="3"></th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title,book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>


      </thead>
      </tbody>
      </table>
    </div>
  </div>
</div>

